<script src="script.js"></script>

      <script>
        // create a firebase reference to the root
        var ref = new Firebase('https://list1234.firebaseio.com/')
        // read data from the location todos/tasks, only once
		
        ref.child('todos/tasks').on('value', function(snapshot){
          var tasks = snapshot.val();
		  var card ='';
          tasks.forEach(function(task){
            
            
            Object.keys(task).forEach(function(key) {
              if (key != 'title') {
				if (task[key] == "high")
				{
					card+='<li class="card #ffa726 orange lighten-1 z-depth-3 dismissable"><div class="card-content"><span class="card-title">';
					card += task.title + '</span><p>'+"deadline: "+task.deadline;
					card += '<p>' + key + ': ' + task[key] + '</p>'+'type: '+task.type+'<p>';
				}
              }
            })
            card += '</div></li>';
            $('#tasks').html(card);
          })
		  
        })
		
      </script>

